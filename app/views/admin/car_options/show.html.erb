<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">オプション詳細</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-5 mx-auto">
      <div class="mt-3 pt-4">
        <div class="font-weight-bold">オプション名</div>
          <p><%= @caroption.name %></p>
        <div class="font-weight-bold">税込価格(税抜価格)</div>
          <p><%= ((@caroption.price*@tax).to_i).to_s(:delimited) %>（<%= (@caroption.price).to_s(:delimited) %>）円</p>
        <div class="font-weight-bold">対象モデル名</div>
          <p><%= @caroption.car.name %></p>
        <div class="font-weight-bold">販売ステータス</div>
          <% if @caroption.is_active == true %>
            <strong>
              <span class="text-success">販売中</span>
            </strong>
          <% else %>
            <strong>
              <span class="text-secondary">販売停止中</span>
            </strong>
          <% end %>
      </div>
      <%= link_to "編集する", edit_admin_car_option_path(@caroption.id), class: "btn btn-success btn-md mt-2" %>
    </div>
  </div>
</div>