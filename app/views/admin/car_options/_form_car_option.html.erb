<div class="form-inline mb-2">
  <%= f.label :"オプション名", class:"col-sm-3" %>
  <%= f.text_field :name, class:"col-sm-9", placeholder: "オプション名" %>
</div>
<div class="form-inline mb-2">
  <%= f.label :"税抜価格", class:"col-sm-3" %>
  <%= f.text_field :price, class:"col-sm-3", placeholder: "100000" %>円
</div>
<div class="form-inline mb-2">
  <%= f.label :"モデル", class:"col-sm-3" %>
  <%= f.collection_select(:car_id, Car.all, :id, :name, prompt: "-- 選択してください --", class:"col-sm-9") %>
</div>
<div class="form-inline mb-2">
  <%= f.label :"販売ステータス", class:"col-sm-3" %>
  <%= f.radio_button :is_active, true, checked: true %>
  <%= f.label :is_active, "販売中",  class:"mr-2" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, "販売停止中" %>
</div>