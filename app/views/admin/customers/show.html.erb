<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">会員詳細</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-5 mx-auto">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td style="width: 40%">会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td style="width: 40%">氏名</td>
            <td><%= @customer.last_name + @customer.first_name %></td>
          </tr>
          <tr>
            <td style="width: 40%">フリガナ</td>
            <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td style="width: 40%">電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td style="width: 40%">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td style="width: 40%">会員ステータス</td>
            <td>
              <% if @customer.is_active == true %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-secondary">退会</p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success mt-3 mr-3" %>
    </div>
  </div>
</div>