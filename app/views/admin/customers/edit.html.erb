<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集集</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-sm-10 px-sm-0 mb-3">
    <%= form_with model: [:admin, @customer], lacal: true do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td style="width: 25%">会員ID</td>
            <td style="width: 25%"><%= f.label :"#{@customer.id}" %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, class: "rounded" %></td>
            <td><%= f.text_field :first_name, class: "rounded" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana, class: "rounded" %></td>
            <td><%= f.text_field :first_name_kana, class: "rounded" %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number, class: "rounded" %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "有効", {value: :true} %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "退会", {value: :false} %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>