<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">モデル新規登録</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">
  <!-- form_with -->
  <%= form_with model: [:admin, @car], local: true do |f| %>
    <br>
    <div class="container">
      <div class="form-inline mb-2">
        <%= f.label :"モデル画像", class:"col-sm-3" %>
        <%= f.attachment_field :image, class:"image col-sm-9" %>
      </div>
      <div class="form-inline mb-2">
        <%= f.label :"モデル名", class:"col-sm-3" %>
        <%= f.text_field :name, class:"col-sm-9", placeholder: "モデル名" %>
      </div>
      <div class="form-inline mb-2">
        <%= f.label :"モデル説明", class:"col-sm-3" %>
        <%= f.text_area :introduction, class:"col-sm-9", placeholder: "ここに説明文を記述します" %>
      </div>
      <div class="form-inline mb-2">
        <%= f.label :"ジャンル" %>
        <%= f.collection_select :genre_id, @genres, :id, :name, {prompt: '-- 選択してください --'} %>
      </div>
      <div class="form-inline mb-2">
        <%= f.label :"販売ステータス" %>
        <%= form_with(model: @car, local: true) do |form| %>
        <%= form.radio_button :is_active, true, checked: true %>
        <%= form.label :is_active, "販売中" %>
        <%= form.radio_button :is_active, false %>
        <%= form.label :is_active, "販売停止中" %>
      </div>
    </div>
  <% end %>
  </div>
</div>