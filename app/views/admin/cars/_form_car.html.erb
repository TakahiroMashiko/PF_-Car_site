<div class="form-inline mb-2">
  <%= f.label :"モデル画像", class:"col-sm-3" %>
  <%= f.attachment_field :image, class:"image col-sm-9" %>
</div>
<div class="form-inline mb-2">
  <%= f.label :"モデル名", class:"col-sm-3" %>
  <%= f.text_field :name, class:"col-sm-9", placeholder: "モデル名" %>
</div>
<div class="form-inline mb-2">
  <%= f.label :"モデル説明", class:"col-sm-3" %>
  <%= f.text_area :introduction, class:"col-sm-9", placeholder: "ここに説明文を記述します" %>
</div>
<div class="form-inline mb-2">
  <%= f.label :"ジャンル", class:"col-sm-3" %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --", class:"col-sm-9") %>
</div>
<div class="form-inline mb-2">
  <%= f.label :"税抜価格", class:"col-sm-3" %>
  <%= f.text_field :price, class:"col-sm-3", placeholder: "1000000" %>円
</div>
<div class="form-inline mb-2">
  <%= f.label :"販売ステータス", class:"col-sm-3" %>
  <%= form_with model: [:admin, @car], local: true do |f| %>
  <%= f.radio_button :is_active, true, checked: true %>
  <%= f.label :is_active, "販売中",  class:"mr-2" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, "販売停止中" %>
</div>
<% end %>
