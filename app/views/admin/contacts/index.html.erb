<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">問い合わせ一覧</h2>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <table class="table table-hover table-condensed">
      <thead>
        <tr class="info">
          <th class="bg-light" style="width: 10%">問合せID</th>
          <th class="bg-light" style="width: 15%">氏名</th>
          <th class="bg-light" style="width: 10%">電話番号</th>
          <th class="bg-light" style="width: 15%">メールアドレス</th>
          <th class="bg-light" style="width: 20%">件名</th>
          <th class="bg-light" style="width: 30%">本文</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td class="info", style="width: 10%">
              <%= contact.id %>
            </td>
            <td class="text-left", style="width: 15%">
              <%= link_to admin_contact_path(contact), class: "btn-link" do %>
                <u class="text-dark"><%= contact.name %></u>
              <% end %>
            </td>
            <td class="text-left", style="width: 10%">
              <%= contact.phone_number %>
            </td>
            <td class="text-left", style="width: 15%">
              <%= contact.email %>
            </td>
            <td class="text-left", style="width: 20%">
              <%= contact.subject %>
            </td>
            <td class="text-left", style="width: 30%">
              <%= contact.message %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <%= paginate @contacts, class: "text-center" %>
</div>