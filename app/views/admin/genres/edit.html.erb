<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2 class="head-line title_h2 text-center bg-light">ジャンル編集</h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="col- px-sm-0 mx-auto">
    <div class="my-3">
      <%= form_with model: [:admin, @genre], local: true do |f| %>
      <div class="field">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name, class: "mx-5" %>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>