<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2 class="head-line title_h2 text-center bg-light">ジャンル一覧・追加</h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-6 px-sm-0 mx-auto my-3">
    <%= form_with model: [:admin, @genre], local: true do |f| %>
    <div class="field">
      <%= f.label "ジャンル名" %>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "mx-5" %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
<div class="row ml-5 pl-4">
  <div class="col-sm-6 px-sm-0 mx-auto my-3">
    <table class="table table-inverse">
      <thead>
        <tr>
          <th class="table-light border-dark">ジャンル</th>
          <th colspan="1", class="table-light border-dark"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td class="align-middle border-dark"><%= genre.name %></td>
          <td class="align-middle border-dark", style="width: 30%">
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>