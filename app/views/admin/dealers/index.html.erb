<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">ディーラー一覧</h2>
    </div>
    <div class="col-sm-8"></div>
    <div class="col-sm-1">
      <%= link_to new_admin_dealer_path, class: "btn btn-light pull-right" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <table class="table table-hover table-condensed">
      <thead>
        <tr class="info">
          <th class="bg-light" style="width: 15%">ディーラーID</th>
          <th class="bg-light" style="width: 70%">住所</th>
          <th class="bg-light" style="width: 15%">電話番号</th>
        </tr>
      </thead>
      <tbody>
        <% @dealers.each do |dealer| %>
          <tr>
            <td class="info", style="width: 15%">
              <%= dealer.id %>
            </td>
            <td class="text-left", style="width: 70%">
              <%= link_to admin_dealer_path(dealer), class: "btn-link" do %>
                <u class="text-dark"><%= dealer.address %></u>
              <% end %>
            </td>
            <td class="text-left", style="width: 15%">
              <%= dealer.phone_number %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <%= paginate @dealers, class: "text-center" %>
</div>