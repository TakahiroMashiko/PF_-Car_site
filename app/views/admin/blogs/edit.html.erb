<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">ブログ編集</h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="col text-center">
    <%= attachment_image_tag @blog, :image, format: 'jpeg', size: "300x230", fallback: "no_image.jpg" %>
  <div class="col-sm-5 px-sm-0 mx-auto">
    <div class="my-3">
    <%= form_with model: [:admin, @blog], local: true do |f| %>
      <%= render 'form_blog', f: f %>
    <div class="col-sm-5 px-sm-0 mx-auto">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
    <% end %>
    </div>
  </div>
</div>