<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">ブログ一覧</h2>
    </div>
    <div class="col-sm-8"></div>
    <div class="col-sm-1">
      <%= link_to new_admin_blog_path, class: "btn btn-light pull-right" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <table class="table table-hover table-condensed">
      <thead>
        <tr class="info">
          <th class="bg-light" style="width: 10%">ブログID</th>
          <th class="bg-light" style="width: 45%">タイトル</th>
          <th class="bg-light" style="width: 45%">本文</th>
      </thead>
      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td class="info", style="width: 10%">
              <%= blog.id %>
            </td>
            <td class="text-left", style="width: 45%">
              <%= link_to admin_blog_path(blog), class: "btn-link" do %>
                <u class="text-dark"><%= blog.title %></u>
              <% end %>
            </td>
            <td class="text-left", style="width: 45%">
              <%= blog.body %>
            </td>
          <tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <%= paginate @blogs, class: "text-center" %>
</div>