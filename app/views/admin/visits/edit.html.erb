<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2 class="head-line title_h2 text-center bg-light">来店予約編集</h2>
    </div>
  </div>
</div>
<div class="container">
<div class="row">
  <div class="col px-sm-0 mx-auto">
    <div class="my-3">
      <%= form_with model: [:admin, @visit], local: true do |f| %>
        <div class="field mx-5
          <%= f.label "ステータス", class: "mr-5" %>
          <%= f.select :visit_status, Visit.visit_statuses.keys.map %>
          <%= f.submit "変更を保存", class: "btn btn-success ml-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>