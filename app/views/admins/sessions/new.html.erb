<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
      <h2 class="head-line title_h2 text-left bg-light">管理者ログイン画面</h2>
    </div>
  </div>
</div>
<!--form_with-->
<%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <%= f.label :"メールアドレス", class: "col-sm-2 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-5 form-control-static rounded" %>
      </div>
    </div>
  </div>
  <br>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <%= f.label :"パスワード", class: "col-sm-2 control-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-5 form-control-static rounded" %>
      </div>
    </div>
  </div>
  <br>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-xs-1 mx-auto text-center bg-light border border-dark rounded">
        <p class="mt-1">パスワードを忘れた方はインフラ担当まで連絡ください。</p>
        <p class="mb-1">電話　03-1234-1234<br>メールアドレス　infra@sengokucars.co.jp</p>
      </div>
    </div>
  </div>
<% end %>