<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
      <h2 class="head-line title_h2 text-left bg-light border border-dark rounded">管理者ログイン画面</h2>
    </div>
  </div>
</div>
<!--form_with-->
<%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <%= f.label :"メールアドレス", class: "col-sm-2 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-5 form-control-static rounded" %>
      </div>
    </div>
  </div>
  <br>