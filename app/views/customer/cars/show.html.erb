<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">モデル詳細</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs mt-2">
       <div id="img_field">
        <%= attachment_image_tag @car, :image, format: 'jpeg', fallback: "no_image.jpg" %>
      </div>
    </div>
    <div class="col-xs">
      <div class="mt-3 ml-2 pt-4">
        <div class="font-weight-bold">モデル名</div>
          <p><%= @car.name %></p>
        <div class="font-weight-bold">詳細</div>
          <p><%= @car.introduction %></p>
        <div class="font-weight-bold">ボディタイプ</div>
          <p><%= @car.genre.name %></p>
        <div class="font-weight-bold">税込価格(税抜価格)</div>
          <p><%= ((@car.price*@tax).to_i).to_s(:delimited) %>（<%= (@car.price).to_s(:delimited) %>）円</p>
        <div class="font-weight-bold">販売ステータス</div>
          <% if @car.is_active == true %>
            <strong>
              <span class="text-success">販売中</span>
            </strong>
          <% else %>
            <strong>
              <span class="text-secondary">販売停止中</span>
            </strong>
          <% end %>
        <div class="font-weight-bold text-center">
          <%= link_to "見積り確認", new_estimate_path, class: "btn btn-success btn-md mt-2" %>
        </div>
      </div>
    </div>
  </div>
</div>