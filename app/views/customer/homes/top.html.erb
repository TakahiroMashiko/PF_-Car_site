<main class="bg-light">
  <div class="row">
    <div class="col">
      <%= image_tag 'MIYA151230409796_1920x1137.jpg', class: "img-fluid", alt: "main caption-1" %>
      <div class="card-img-overlay d-flex align-items-center justify-content-center">
        <h1 class="text-white text-center">
          <div class="content-bg">
            <% if customer_signed_in? %>
              <appname>Welcome Sengoku Cars.</appname><br>
              <appname>Show all models. <%= link_to "↪", cars_path, class: "text-white" %></appname>
            <% else %>
              <appname>Sengoku Cars ~ your car life. ~ </appname><br>
              <appname>Log in</appname><%= link_to "", new_customer_session_path, class: "fas fa-sign-in-alt text-white ml-2" %>
            <% end %>
          </div>
        </h1>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-4 img-hidden">
      <%= image_tag '1291913.png', class: "img-fluid", alt: "main caption-2" %>
    </div>
    <div class="col-md-8">
      <h1 class="text-dark text-center bg-transparent">
        <appname>
          New Model Debut !<br>
          The "Samurai"<br>
          Show <%= link_to "↪", cars_path, class: "text-body" %> <br>
          The "Samurai" runs bravely.
        </appname>
      </h1>
    </div>
  </div>
</main>