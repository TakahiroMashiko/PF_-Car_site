<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">ディーラー詳細</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-3 mt-5">
       <div id="img_field">
        <%= attachment_image_tag @dealer, :image, format: 'jpeg', size: "300x230", fallback: "no_image.jpg" %>
      </div>
    </div>
    <div class="col-sm-5 offset-sm-1 px-sm-0">
      <div class="mt-3 pt-4">
        <div class="font-weight-bold">住所</div>
          <p><%= @dealer.address %></p>
        <div class="font-weight-bold">電話番号</div>
          <p><%= @dealer.phone_number %></p>
      </div>
      <%= link_to "来店予約する", new_visit_path, class: "btn btn-success btn-md mt-2" %>
    </div>
  </div>
</div>