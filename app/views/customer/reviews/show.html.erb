<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">レビュー詳細</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-5 offset-sm-1 px-sm-0">
      <div class="mt-3 pt-4">
        <div class="font-weight-bold">タイトル</div>
          <p><%= @review.title %></p>
        <div class="font-weight-bold">本文</div>
          <p><%= @review.body %></p>
        </div>
        <div class="font-weight-bold">評価</div>
        <div class="review-evaluation" data-score="<%= @review.evaluation %>"></div>
      <% if customer_signed_in? %>
        <% if @review.customer_id == current_customer.id %>
          <%= link_to "編集する", edit_review_path(@review.id), class: "btn btn-success btn-md mt-2" %>
          <%= link_to "削除する", review_path(@review.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-md mt-2 ml-2" %>
        <% end %>
      <% end %>
    </div>
    <script>
      $('.review-evaluation').empty();
      $('.review-evaluation').raty({
        readOnly: true,
        score: function() {
          return $(this).attr('data-score');
        },
        path: '/assets/'
      });
    </script>
  </div>
</div>