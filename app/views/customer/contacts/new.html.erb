<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">問い合わせ</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm text-danger">
    <% if @contact.errors.any? %>
      <h3>入力した内容にエラーが<%= @contact.errors.count %>件あります。</h3>
      <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col mt-3">
    <%= form_with model: @contact, url: confirm_contacts_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name, '氏名（姓名）*' %>
        <%= f.text_field :name, autofocus: true, placeholder: "令和　道子", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number, '電話番号*' %>
        <%= f.text_field :phone_number, placeholder: "09012345678 ※ハイフンなし", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス*' %>
        <%= f.text_field :email, placeholder: "sample@example.com", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :subject, '件名*' %>
        <%= f.text_field :subject, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :message, 'メッセージ*' %>
        <%= f.text_area :message, size: '10x10', class: 'form-control' %>
      </div>
      <div class="form-group text-center">
        <p class="text-danger">* は入力必須項目です。</p>
      </div>
      <div class="form-group text-center">
        <%= f.submit '入力内容確認', class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
  </div>
</div>