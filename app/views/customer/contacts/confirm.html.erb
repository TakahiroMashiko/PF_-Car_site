<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2 class="head-line title_h2 text-center bg-light">問い合わせ情報確認</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col mt-3">
      <div class="font-weight-bold" style="width: 30%;">氏名（姓名）</div>
        <p><%= @contact.name %></p>
      <div class="font-weight-bold">電話番号</div>
        <p><%= @contact.phone_number %></p>
      <div class="font-weight-bold">メールアドレス</div>
        <p><%= @contact.email %></p>
      <div class="font-weight-bold">件名</div>
        <p><%= @contact.subject %></p>
      <div class="font-weight-bold">メッセージ</div>
        <p><%= @contact.message %></p>
      <%= form_with model: @contact, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone_number %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :message %>
        <div class="text-center">
          <%= f.submit '送信', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>