<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">問い合わせ情報確認</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col mt-3">
      <table>
        <tbody>
          <tr>
            <td class="text-center" style="width: 30%;">氏名（姓名）</td>
            <td><%= @contact.name %></td>
          </tr>
          <tr>
            <td class="text-center">電話番号</td>
            <td style="white-space: pre-wrap;"><%= @contact.phone_number %></td>
          </tr>
          <tr>
            <td class="text-center">メールアドレス</td>
            <td style="white-space: pre-wrap;"><%= @contact.email %></td>
          </tr>
          <tr>
            <td class="text-center">件名</td>
            <td style="white-space: pre-wrap;"><%= @contact.subject %></td>
          </tr>
              <tr>
            <td class="text-center">メッセージ</td>
            <td style="white-space: pre-wrap;"><%= @contact.message %></td>
          </tr>
        </tbody>
      </table>
      <%= form_with model: @contact, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone_number %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :message %>
        <div><%= f.submit '送信' %></div>
      <% end %>
    </div>
  </div>
</div>