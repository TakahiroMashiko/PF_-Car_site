<% if customer_signed_in? %>
   <% if blog.favorited_by?(current_customer) %>
    <p><span>♥</span><%= link_to blog.favorites.count, blog_favorites_path(blog.id), method: :delete, remote: true, class: "text-body" %></p>
  <% else %>
    <p><span>♡</span><%= link_to blog.favorites.count, blog_favorites_path(blog.id), method: :post, remote: true, class: "text-body" %></p>
  <% end %>
<% end %>