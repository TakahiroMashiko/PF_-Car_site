<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">ブログ詳細</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-3 mt-5">
       <div id="img_field">
        <%= attachment_image_tag @blog, :image, format: 'jpeg', size: "300x230", fallback: "no_image.jpg" %>
      </div>
    </div>
    <div class="col-sm-5 offset-sm-1 px-sm-0">
      <div class="mt-3 pt-4">
        <div class="font-weight-bold">タイトル</div>
          <p><%= @blog.title %></p>
        <div class="font-weight-bold">本文</div>
          <p><%= @blog.body %></p>
        <div class="font-weight-bold">いいね</div>
          <% if @blog.favorited_by?(current_customer) %>
            <p><span>♥<%= link_to @blog.favorites.count, blog_favorites_path(@blog.id), method: :delete, class:"text-body" %></p></span>
          <% else %>
            <p><span>♡<%= link_to @blog.favorites.count, blog_favorites_path(@blog.id), method: :post, class:"text-body" %></p></span>
          <% end %>
        </div>
    </div>
  </div>
</div>